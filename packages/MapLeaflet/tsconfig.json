{
    "compilerOptions": {
      "target": "es6",
      "module": "esnext",
      "declaration": true,
      "outDir": "./lib",
      "allowSyntheticDefaultImports": true,
      "jsx": "react",
      "lib": ["dom", "esnext"],
      "moduleResolution": "node",
      "noEmit": false,
      "skipLibCheck": true,
      "resolveJsonModule": true,
      "strict": true,
      "allowJs": true,
      "typeRoots": ["./types", "./node_modules/@types"]
    },
    "include": ["src"],
    "exclude": [
      "node_modules", "types"
    ]
  }